<div class="row marginLRowLeftRight0 bg-greyWow opacity08">
    <div class="col-lg-12 col-md-12 whiteColor paddingTopBot">
        <div class="row justify-content-md-center marginLRowLeftRight0">
            <h1>HISTORIQUE - <span style="color:{{ classPersonnage.Classe.couleur }}">{{ classPersonnage.nom }}</span></h1>
        </div>
        <div class="row justify-content-md-center marginLRowLeftRight0">
            <h2>POINTS ACTUELLES - {{ classPersonnage.dkp }}</span></h2>
        </div>
        <table id="tab_Historique_joueur" class="table table-striped table-bordered helvetica" style="width:100%">
            <thead>
            <tr>
                <th>Action</th>
                <th>DKP</th>
                <th>Commentaire</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            {{#each historiquePersonnage}}
            <tr>
                <td>{{ ActionHistorique.action }}</td>
                <td>{{ dkp }}</td>
                {{#if (ifAction id_action) }}
                <td><a href="https://en.classic.wowhead.com/item={{id_wowhead}}" target="_blank" data-wowhead="item={{id_wowhead}}"></a></td>
                {{ else }}
                <td>{{ commentaire }}</td>
                {{/if }}
                <td>le {{ timestampToDate date_historique }}</td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#tab_Historique_joueur').DataTable({
            "scrollY":        "490px",
            "scrollCollapse": true,
            "paging":         false,
            "sorting": false
        });
    } );
</script>