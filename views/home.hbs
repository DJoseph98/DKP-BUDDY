<div class="row marginLRowLeftRight0 bg-greyWow opacity08">
    <div class="col-lg-5 col-md-5 whiteColor paddingTopBot">
        <div class="row justify-content-md-center marginLRowLeftRight0">
             <h1>TABLEAU DKP</h1>
        </div>
        <table id="tab_Liste_Dpk" class="table table-striped table-bordered helvetica" style="width:100%">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Points</th>
                </tr>
            </thead>
            <tbody>
                {{#each listeDKP}}
                <tr>
                    <td class="ft18 bold"><a style="color:{{Classe.couleur}}" href="/historiquePersonnage/{{id}}" target="_blank">{{nom}}</a></td>
                    <td>{{dkp}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col-lg-7 col-md-7 whiteColor paddingTopBot">
         <div class="row justify-content-md-center marginLRowLeftRight0">
             <h1>HISTORIQUE</h1>
        </div>
         <table id="tab_Historique" class="table table-striped table-bordered helvetica" style="width:100%">

             <thead>
             <tr>
                 <th>Joueur</th>
                 <th>Action</th>
                 <th>Date</th>
             </tr>
             </thead>
             <tbody>
                {{#each listeHistorique}}
                <tr>
                    <td class="ft18 bold"><a style="color:{{Personnage.Classe.couleur}}" href="/historiquePersonnage/{{Personnage.id}}" target="_blank">{{Personnage.nom}}</a></td>
                    <td>{{ historiqueString dkp  }} pour <a href="https://en.classic.wowhead.com/item={{id_wowhead}}" target="_blank" data-wowhead="item={{id_wowhead}}"></a></td>
                    <td>le {{ timestampToDate date_historique }}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function() {
    $('#tab_Liste_Dpk').DataTable({
        "scrollY":        "490px",
         "scrollCollapse": true,
         "paging":         false,
        "order": [1, 'desc']
    });
     $('#tab_Historique').DataTable({
         "scrollY":        "490px",
         "scrollCollapse": true,
         "paging":         false,
         "columnDefs": [
             { "width": "50%", "targets": 1 },
             { "targets": 2 }
         ],
         "sorting": false
     });
} );
</script>